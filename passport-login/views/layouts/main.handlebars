<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Passport App</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  {{#if success_messages}}
  <div class='alert alert-success'> {{success_messages}}</div>
  {{/if}}

  {{#if error_messages}}
  <div class='alert alert-danger'> {{error_messages}}</div>
  {{/if}}

  {{#if errors}}
  {{#each errors}}
  <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
  {{/if}}
  {{{body}}}
</body>

</html>